    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "launch",
            "name": "HXCPP (GDB Linux)",
            "target": "${workspaceFolder}/export/linux/bin/Client",
            "cwd": "${workspaceFolder}/export/linux/bin",
            "valuesFormatting": "parseText",
            "preLaunchTask": "lime: build"
        },
        {
            "name": "HXCPP (Linux)",
            "type": "hxcpp",
            "request": "launch",
            "program": "${workspaceFolder}/export/linux/bin/Client",
            "preLaunchTask": "lime: build"
        },
        {
            "name": "HXCPP (Windows)",
            "type": "hxcpp",
            "request": "launch",
            "program": "${workspaceFolder}/export/windows/bin/Client.exe",
            "preLaunchTask": "lime: build"
        }
    ]
}